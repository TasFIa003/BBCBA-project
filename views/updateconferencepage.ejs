<%-include('partials/adminheader'); -%>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Update Conference page</h1>

  </div>




  </main>

<div class="container">
  <div class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <form class="" action="/updateconferencepage" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Conference Title:</label>
        <input class="form-control" type="text" name="title" autocomplete="off">
        <label>Conference Date:</label>
        <input class="form-control" type="text" name="date" autocomplete="off">
        <label>Location:</label>
        <input class="form-control" type="text" name="location" autocomplete="off">
        <label>photo upload</label>
        <input class="form-control" type="file" name="file" value="">
        <label>Conference details:</label>
        <textarea class="form-control"id="editor" name="details" rows="5" cols="30"></textarea>
      </div>
      <button class="btn btn-dark mt-4" type="submit" name="button">Publish</button>
      </form>
      <div class="container mt-5 mr-5">
        <table class="table" border="1">
          <thead>
            <tr>
              <th>title</th>
              <th>date</th>
              <th>location</th>
              <th>photo upload</th>
              <th>Details:</th>
              <th>Update</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <%conps.forEach(function(conp){%>
            <tr>
              <td><%=conp.title%></td>
              <td><%=conp.date%></td>
              <td><%=conp.location%></td>
              <td><img class="up-img3"src="/uploads/<%= conp.file %>" alt="profile picture"></td>
              <td><%-conp.details%></td>
              <td><a class="edit" href="/conpedit/<%=conp._id%>">Update </a></td>
              <td><a class="delete" href="/conpdelete/<%=conp._id%>">Delete</a></td>
            </tr>
              <%})%>
          </tbody>


        </table>

      </div>


      </div>

</div>



<canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>


<%-include('partials/adminfooter'); -%>
